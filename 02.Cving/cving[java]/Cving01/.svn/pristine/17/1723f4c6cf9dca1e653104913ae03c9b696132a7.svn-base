@charset "EUC-KR";
body 
{
	margin : 0;
	padding: 0;
	background-color:black;
	color: white;
}
a
{
	text-decoration:none;
}
.container
{
	/*border: 1px solid red;*/
	width: 1200px;
	margin: auto;
}
#header
{
	position: fixed;
	z-index : 200;
	width:1200px;
	height:100px;
	background-color:rgba(0, 0, 0, 0.8);
	display: flex;
	
}
.logo
{
	/*border: 1px solid gold;*/
	width: 200px;
	height: 100px;
}
.top
{
	/*border: 1px solid gold;*/
	width: 1200px;

	padding-top:50px;
	
}

#bx-pager li a.active, #bx-pager li a:hover 
{
	background-color: #4C5B60;
	font-weight: bold;
}

.slider
{
	top:-15px;
}
.slider > li > a > img
{
	
	border-radius: 10%;
	transition: all 0.2s linear;
	width:180px; 
	height:250px;	
	margin: 20px;
}
.slider > li > a > img:hover
{
	transform: scale(1.1);
}

