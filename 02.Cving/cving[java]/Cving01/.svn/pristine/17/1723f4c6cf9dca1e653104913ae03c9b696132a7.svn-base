}
.logout > a
{
	color:red; 
	font-size:20px;  
	font-weight:bold ;
}
.search
{
	padding-left:150px;
	padding-top:30px;
}
.search > input
{
	width:200px;
	height:30px;
	box-shadow: none;
	border: 0;
	border-radius: 36px;
}
.search > a
{ 
	font-size:20px;  
	font-weight:bold ;
	color:red; 
	
	
}
.search > a:hover
{
	color:white;
}
.movie_list
{
	list-style:none;
	margin-left: 50px;
}
.movie_list > li
{
	float : left;
	margin-left : 20px;
}
.movie_list > li > a
{
	
	width : 180px;
	height : 220px;
}
